@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root style="opacity: @(StartFade ? 1 : 0)">

</root>

@code
{

	[Property, TextArea] public string MyStringValue { get; set; } = "Hello World!";
	[Property] public bool StartFade { get; set; } = false;

	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine( StartFade );
}
