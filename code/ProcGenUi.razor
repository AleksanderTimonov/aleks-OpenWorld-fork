@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
	<div style="flex-direction: column;">
		<div class="title">Generating World...</div>
		<div class="title">NOTE: This is highly experimental, there could be issues</div>
		<div class="title">"Collection was modified; enumeration operation may not execute" is a normal error</div>
		<div class="title">Press the restart button if any errors emerge</div>
	</div>
	<div class="button" style="position: absolute; bottom: 32px; left: 32px;" onclick=@(() => ChangeScene(RestartScene))>Restart</div>
</root>

@code
{
	[Property] public SceneFile RestartScene { get; set; }
	[Property, TextArea] public string MyStringValue { get; set; } = "Hello World!";

	void ChangeScene(SceneFile scene)
	{
		Game.ActiveScene.Load(scene);
	}

	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine( MyStringValue );
}
